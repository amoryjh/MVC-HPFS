@{
    ViewBag.Title = "Fitbit Manage";
    ViewBag.BodyClass = "fitbit";
}
<section class="clearfix">
    <div class="col-md-10 col-md-offset-1">
        <div class="form-group">
            <h1>Update fitbit Information</h1>
        </div>
        <br />

        <div class="form-group">
            <h2>Update Goal</h2>

            @using (Html.BeginForm("updateGoalFitBit", "Fitbit"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-8">
                        <label>Update Goal: </label> @Html.TextBox("updateGoal", null, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Update" class="btn btn-solid" />
                    </div>
                </div>
            }
        </div>

        <div class="form-group">
            <h2>Select Date</h2>
            @using (Html.BeginForm("updateDateFitBit", "Fitbit"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-8">
                        <label>Start Date: </label> @Html.TextBox("dateStart", null, new { @class = "form-control",  @id = "datepicker"})

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Select" class="btn btn-solid" />
                    </div>
                </div>
            }
        </div>
        <div class="form-group back_to_list">
            <div class="col-md-offset-2 col-md-10">
                <h4><i class="fa fa-chevron-left"></i> @Html.ActionLink("Back to fitbit", "Index")</h4>
            </div>
        </div>
    </div>        
</section>
