@model IEnumerable<HPSMVC.Models.Index>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            File
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ButtonText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ButtonLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{
                if (item.File.fileContent != null && item.File.fileType.Contains("image"))
                {
                    string imageBase64 = Convert.ToBase64String(item.File.fileContent);
                    string imageSrc = string.Format("data:" + item.File.fileType + ";base64,{0}", imageBase64);
                    <img src="@imageSrc" style="max-height:100px;max-width:120px;" class="img-responsive" />
                }
                else
                {
                    <p>No Image</p>
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ButtonText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ButtonLink)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
