@model IEnumerable<HPSMVC.Models.Event>
@{
    ViewBag.Title = "Index";
}
<section>
    <div class="container">
        <h1>Events</h1>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        @using (Html.BeginForm())
        {
            <p>
                @Html.TextBox("SearchString")
                <input type="submit" value="Search" class="btn btn-solid" />
                <a href="Admin" value=" Clear" class="btn btn-solid">Clear</a>
            </p>
            
            <p style="color:red">
                @TempData["ValidationMessage"]
            </p>
        }
        <div class="table-overflow">
        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink("Title", "Admin", new { sortOrder = ViewBag.TitleSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.ActionLink("Date", "Admin", new { sortOrder = ViewBag.DateSortParm })
                </th>
                <th>
                    @Html.ActionLink("Viewer", "Admin", new { sortOrder = ViewBag.ViewerSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fileName)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @(item.Content == null ? String.Empty : item.Content.Substring(0, Math.Min(item.Content.Length, 30)))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Viewer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fileName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table></div>
    </div>
</section>